<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="CalculadoraMAUISeg.Mobile.FlyoutPageDemo"
             Title="FlyoutPageDemo">
    
    <?El flyout permite deslizar los componentes y de esta forma mostrar un content page hacia otro?>
    
    <FlyoutPage.Flyout>
        <ContentPage Title="My App" BackgroundColor="Aqua">
            <VerticalStackLayout
                Spacing="10"
                VerticalOptions="Center"
                HorizontalOptions="Center">
                <Label 
                Text="Hola, desde Flyout"/>

            </VerticalStackLayout>

        </ContentPage>
    </FlyoutPage.Flyout>
    
    
    
    <FlyoutPage.Detail>
        <ContentPage BackgroundColor="Yellow">
            <VerticalStackLayout
                Spacing="10"
                VerticalOptions="Center"
                HorizontalOptions="Center">
                <Label 
                Text="Hola, desde details"/>

            </VerticalStackLayout>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>



